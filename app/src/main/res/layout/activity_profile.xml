<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_willing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/whitite"
                android:padding="1dp">

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/four_dp"
                    android:textColor="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/whitite"
                android:padding="1dp">

                <EditText
                    android:id="@+id/et_mobno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:padding="@dimen/four_dp"
                    android:textColor="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/whitite"
                android:padding="1dp">

                <EditText
                    android:id="@+id/et_emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/four_dp"
                    android:textColor="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/whitite"
                android:padding="1dp">

                <EditText
                    android:id="@+id/et_add"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="Postal Address"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/four_dp"
                    android:textColor="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass_til"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/whitite"
                android:padding="1dp">

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/four_dp"
                    android:textColor="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/eight_dp"
                android:text="Choose Preference"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <RadioGroup
                android:id="@+id/eatarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/eight_dp"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_v"
                    style="@style/M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vegetarian" />

                <RadioButton
                    android:id="@+id/rb_nv"
                    style="@style/M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Non-Vegetarian" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/drinking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/eight_dp"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_d"
                    style="@style/M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Drinker" />

                <RadioButton
                    android:id="@+id/rb_nd"
                    style="@style/M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Non-Drinker" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/eight_dp"
                android:text="Favourite Cuisines"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/c1"
                style="@style/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/c2"
                style="@style/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italian" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/c3"
                style="@style/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thai" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/c4"
                style="@style/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continental" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/c5"
                style="@style/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="end"
            android:background="@color/trans"
            android:src="@drawable/ic_check" />
    </LinearLayout>
</ScrollView>